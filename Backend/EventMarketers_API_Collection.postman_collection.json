  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-generate unique device ID if not set",
          "if (!pm.collectionVariables.get('deviceId') || pm.collectionVariables.get('deviceId') === 'test-device-123') {",
          "    pm.collectionVariables.set('deviceId', 'device-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9));",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save auth token from login responses",
          "if (pm.response.json() && pm.response.json().token) {",
          "    pm.collectionVariables.set('authToken', pm.response.json().token);",
          "    console.log('Auth token saved to collection variable');",
          "}",
          "",
          "// Log response for debugging",
          "console.log('Response Status:', pm.response.status);",
          "console.log('Response Body:', pm.response.json());"
        ]
      }
    }
