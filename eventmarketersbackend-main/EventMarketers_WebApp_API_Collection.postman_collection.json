      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@eventmarketers.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "admin", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.token) {",
                  "        pm.collectionVariables.set('adminToken', response.token);",
                  "        console.log('Admin token saved:', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Subadmin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"subadmin@eventmarketers.com\",\n  \"password\": \"subadmin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/subadmin/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "subadmin", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.token) {",
